            border: 1px solid #ddd;
        }
        
        .rdv-datatable-div .pagination>.active>a,
        .rdv-datatable-div .pagination>.active>a:focus,
        .rdv-datatable-div .pagination>.active>a:hover,
        .rdv-datatable-div .pagination>.active>span,
        .rdv-datatable-div .pagination>.active>span:focus,
        .rdv-datatable-div .pagination>.active>span:hover {
            z-index: 3;
            color: #fff;
            cursor: default;
            background-color: #337ab7;
            border-color: #337ab7;
        }
