{% extends "@Rdv/layout.twig" %}
{% block content %}
<div class="container">
	{% for message in app.flashes('error') %}
    	<div class="row">
            <div class="alert-error">
                {{ message }}
            </div>
        </div>
    {% endfor %}
    {{ form_start(form) }}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ajouter un RDV</h3>
        </div>
        <div class="card-body">
            {{ form_label(form.creneauxDebut) }}
            <div>
                {{ form_widget(form.creneauxDebut) }}
            </div>
            {{ form_label(form.creneauxFin) }}
            <div>
                {{ form_widget(form.creneauxFin) }}
            </div>
            {{ form_label(form.commentaire) }}
            <div>
                {{ form_widget(form.commentaire) }}
            </div>
            {{ form_label(form.typeId) }}
            <div>
                {{ form_widget(form.typeId) }}
            </div>
        </div>
        <div class="card-footer">
            <div class="col-sm-2 offset-10">
                {{ form_widget(form.Enregistrer) }}
            </div>
        </div>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}