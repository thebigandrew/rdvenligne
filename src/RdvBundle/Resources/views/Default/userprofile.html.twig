{% extends "@Rdv/layout.twig" %}
{% block content %}
<div class="container">
    {{ form_start(form) }}
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ form_label(form.userName) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.userName) }}
                {{ form_widget(form.userName) }}
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ form_label(form.firstName) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.firstName) }}
                {{ form_widget(form.firstName) }}
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ form_label(form.lastName) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.lastName) }}
                {{ form_widget(form.lastName) }}
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ form_label(form.email) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ form_label(form.telephone) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.telephone) }}
                {{ form_widget(form.telephone) }}
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col control-label">{{ form_label(form.dateNaissance) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.dateNaissance) }}
                {{ form_widget(form.dateNaissance) }}
            </div>
        </div>
        <button class="btn btn-primary btn-lg btn-block" type="submit">Enregister</button>
    {{ form_end(form) }}
</div>
{% endblock %}
