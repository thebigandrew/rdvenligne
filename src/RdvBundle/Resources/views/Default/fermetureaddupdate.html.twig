{% extends "@Rdv/layout.twig" %}
{% block content %}
<div class="container">
    {{ form_start(form) }}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ajout / modification de fermeture</h3>
        </div>
        <div class="card-body">
            {{ form_label(form.date) }}
            <div>
                {{ form_errors(form.date) }}
                {{ form_widget(form.date) }}
            </div>
            {{ form_label(form.heureDebut) }}
            <div>
                {{ form_errors(form.heureDebut) }}
                {{ form_widget(form.heureDebut) }}
            </div>
            {{ form_label(form.heureFin) }}
            <div>
                {{ form_errors(form.heureFin) }}
                {{ form_widget(form.heureFin) }}
            </div>
        </div>
        <div class="card-footer">
            <div class="col-sm-2 offset-10">
                {{ form_widget(form.Enregistrer) }}
            </div>
        </div>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}