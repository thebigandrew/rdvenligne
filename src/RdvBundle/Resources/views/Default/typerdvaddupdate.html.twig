{% extends "@Rdv/layout.twig" %}
{% block content %}
<div class="container">
    {{ form_start(form) }}
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ form_label(form.type) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.type) }}
                {{ form_widget(form.type) }}
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ form_label(form.tarif) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.tarif) }}
                {{ form_widget(form.tarif) }}
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ form_label(form.duree) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.duree) }}
                {{ form_widget(form.duree) }}
            </div>
        </div>
        <button class="btn btn-primary btn-lg btn-block" type="submit">Enregister</button>
    {{ form_end(form) }}
</div>
{% endblock %}