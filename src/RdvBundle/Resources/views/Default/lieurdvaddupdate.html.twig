{% extends "@Rdv/layout.twig" %}
{% block content %}
    <section class="content">
        {{ form_start(form) }}
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"> Edition profil </h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="type" class="col-12 control-label">{{ form_label(form.nom) }}</label>
                    <div class="col-11 offset-1">
                        {{ form_errors(form.nom) }}
                        {{ form_widget(form.nom) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="tarif" class="col-12 control-label">{{ form_label(form.adresse) }}</label>
                    <div class="col-11 offset-1">
                        {{ form_errors(form.adresse) }}
                        {{ form_widget(form.adresse) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="tarif" class="col-12 control-label">{{ form_label(form.typeRdv) }}</label>
                    <div class="col-11 offset-1">
                        {{ form_errors(form.typeRdv) }}
                        {{ form_widget(form.typeRdv) }}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-sm-2 offset-10">
                    {{ form_widget(form.Enregistrer, { 'label': 'Enregistrer' }) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}