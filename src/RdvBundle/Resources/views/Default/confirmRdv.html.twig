{% extends "@Rdv/partials/datatables.twig" %}
{% block content %}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Confirmation du RDV</h3>
        </div>
        <div class="card-body">
            <p>Votre rendez vous avec {{ oRdv.proId.firstName }} {{ oRdv.proId.lastName }} le {{ oRdv.creneauxDebut|date("d/m/Y") }} Ã  {{ oRdv.creneauxDebut|date("H:i") }} est en attente de validation.</p>
            {% if oRdv.lieu is not null %}
                <p>Lieu de rendez-vous : {{ oRdv.lieu.nom }}</p>
            {% endif %}
            {% if oRdv.typeId is not null %}
                <p>Type de prestation : {{ oRdv.typeId.type }}</p>
            {% endif %}
        </div>
        <div class="card-footer">
            {# ce n'est pas le client qui confirme le rdv ! #}
            {#<a class="btn btn-info pull-right" href="{{ path('client_confirm_rdv', {'id':oRdv.id}) }}">Confirmer</a>#}
            <a class="btn btn-danger pull-right" href="{{ path('client_cancel_rdv', {'id':oRdv.id}) }}">Annuler</a>
        </div>
    </div>
{% endblock %}
