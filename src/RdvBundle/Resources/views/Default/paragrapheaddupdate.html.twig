{% extends "@Rdv/layout.twig" %}
{% block content %}
    {{ form_start(form) }}
        <div class="form-group">
            <label for="titre" class="col-sm-2 control-label">{{ form_label(form.titre) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.titre) }}
                {{ form_widget(form.titre) }}
            </div>
        </div>
        <div class="form-group">
            <label for="text" class="col-sm-2 control-label">{{ form_label(form.text) }}</label>
            <div class="col-sm-10">
                {{ form_errors(form.text) }}
                {{ form_widget(form.text) }}
            </div>
        </div>
        <input type="submit" value="Enregister" />
    {{ form_end(form) }}
{% endblock %}